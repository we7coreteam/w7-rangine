{
	"name": "w7/rangine",
	"description": "基于 Swoole 的常驻内存型 PHP 高性能框架",
	"type": "library",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "RenChao",
			"email": "donknap@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "path",
			"url": "../w7-rangine-command"
		},
		{
			"type": "path",
			"url": "../w7-rangine-lang"
		},
		{
			"type": "path",
			"url": "../w7-rangine-contract"
		},
		{
			"type": "path",
			"url": "../w7-rangine-http-message"
		},
		{
			"type": "path",
			"url": "../w7-rangine-facade"
		},
		{
			"type": "path",
			"url": "../w7-rangine-package-plugin"
		},
		{
			"type": "path",
			"url": "../w7-rangine-database-tool"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-json": "*",
		"w7/rangine-compat": "~3.0.0",
		"w7/rangine-contract": "dev-php8.1",
		"w7/rangine-facade": "dev-php8.1",
		"w7/rangine-http-message": "dev-php8.1",
		"w7/rangine-database-tool": "dev-php8.1",
		"w7/rangine-lang": "dev-php8.1",
		"w7/rangine-command": "dev-php8.1",
		"w7/rangine-package-plugin": "dev-php8.1",
		"illuminate/config": "^10.0",
		"illuminate/database": "^10.0",
		"illuminate/events": "^10.0",
		"illuminate/redis": "^10.0",
		"illuminate/validation": "^10.0",
		"illuminate/pagination": "^10.0",
		"nikic/fast-route": "^1.3",
		"monolog/monolog": "^1.2|^2.0",
		"vlucas/phpdotenv": "^3.3",
		"symfony/console": "^6.2",
		"filp/whoops": "^2.7",
		"twig/twig": "^3.0"
	},
	"require-dev": {
		"swoole/ide-helper": "^4.4",
		"w7/php-cs-fixer": "*",
		"phpunit/phpunit": "^8.2"
	},
	"autoload": {
		"psr-4": {
			"W7\\": "Src/",
			"W7\\Tests\\": "tests/"
		},
		"files": [
			"Src/Core/Helper/Functions.php",
			"Src/Core/Config/Define.php"
		]
	},
	"bin": [
		"bin/rangine-server",
		"bin/rangine-gerent"
	],
	"config": {
		"allow-plugins": {
			"w7/php-cs-fixer": true,
			"funkjedi/composer-include-files": true,
			"w7/rangine-package-plugin": true
		}
	},
	"minimum-stability": "dev"
}
