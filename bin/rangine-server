#!/usr/bin/env php
<?php
/**
 * 服务启动管理
 * @author donknap
 * @date 18-7-18 下午6:35
 */
$path = end($argv);
reset($argv);
$appPath = null;
if (strpos($path, '--app-path') !== false) {
	$appPath = $path;
	array_pop($argv);
	$_SERVER['argv'] = $argv;
}
//处理composer软连模式下，文件位置错误问题
$dir = dirname(__DIR__, 4);
if (!file_exists($dir . '/config/define.php')) {
	if (!$appPath) {
		echo "请通过参数--app-path指定app目录\n";
		exit();
	}
	$dir = explode('=', $appPath, 2)[1];
}
//通过命令，指定当前需要的env文件
foreach ($_SERVER['argv'] as $index => $value) {
	if (strpos($value, '--env=') !== false) {
		$env = explode('=', $value, 2)[1];
		putenv('ENV_NAME=' . $env);
		unset($_SERVER['argv'][$index]);
	}
}
$argv = $_SERVER['argv'];

require_once $dir . '/config/define.php';
$loader = require_once BASE_PATH . '/vendor/autoload.php';

$script = array_shift($argv);
$type = array_shift($argv);
$operate = array_shift($argv);
if (in_array($type, ['start', 'stop', 'restart'])) {
	$operate = $type;
	$type = null;
}
$_SERVER['argv'] = array_merge(
	[
		$script,
		'server:' . $operate,
		'--config-app-setting-server=' . $type
	],
	$argv
);

$app = new \W7\App();
$app->runConsole();

